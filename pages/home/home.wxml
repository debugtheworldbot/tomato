<view class="home-container">
	<scroll-view class="todoList" scroll-y="true">
		<view class="item"  wx:for="{{lists}}"  wx:for-index="index" wx:key="{{item.id}}" bindtap="destoryTodo" data-index="{{index}}">
			<view class="select {{item.finished && 'active'}}"></view>
			<text>{{item.text}}
			</text>
		</view>
	</scroll-view>
  <g-button type="change" size="mini" text="创建任务" bindtap="showConfirm">创建任务</g-button>
	<view class="tomato-wrapper">
		<navigator class="tomato" url="/pages/tomato/tomato">
		<g-clock text="点击开始闹钟" bindtap="goTomato">
		</g-clock>
		</navigator> 
	</view>
	<g-confirm placeholder="???" bindconfirm="confirm" bindcancel="cancel" visible="{{visible}}">
	</g-confirm>
</view>